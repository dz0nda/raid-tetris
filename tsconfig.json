{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es6",
    "lib": ["dom", "es6", "es2016", "es2017.object", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    // "sourceMap": true,
    "pretty": true,
    "paths": {
      "@/client/*": ["src/client/*"],
      "@/client": ["src/client"],
      "@/server/*": ["src/server/*"],
      "@/server": ["src/server"],
      "@/shared/*": ["src/shared/*"],
      "@/shared": ["src/shared"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
