{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es6",
    "lib": ["dom", "es6", "es2016", "es2017.object", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    // "sourceMap": true,
    "pretty": true,
    "paths": {
      "@/client/*": ["src/client/*"],
      "@/client": ["src/client"],
      "@/components/*": ["src/client/components/*"],
      "@/components": ["src/client/components"],
      "@/mantine/*": ["src/client/components/mantine/*"],
      "@/mantine": ["src/client/components/mantine"],
      "@/server/*": ["src/server/*"],
      "@/server": ["src/server"],
      "@/modules/*": ["src/server/modules/*"],
      "@/modules": ["src/server/modules"],
      "@/shared/*": ["src/shared/*"],
      "@/shared": ["src/shared"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "src/server"]
}
